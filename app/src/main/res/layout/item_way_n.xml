<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/way_n"
    android:layout_marginHorizontal="20dp">

    <TextView
        android:id="@+id/point_n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/open_sans_medium"
        android:textColor="@color/psu_details_heading_toolbar"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/point_square"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Точка N" />

    <ImageView
        android:id="@+id/point_square"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_square" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="7dp"
        app:layout_constraintBottom_toBottomOf="@id/point_square"
        app:layout_constraintEnd_toEndOf="@id/point_square"
        app:layout_constraintStart_toStartOf="@id/point_square"
        app:layout_constraintTop_toTopOf="@id/point_square" />

</androidx.constraintlayout.widget.ConstraintLayout>