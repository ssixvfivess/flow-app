<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayout.Custom.Multiline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="hintTextColor">@color/secondary_text</item>
        <item name="boxStrokeColor">@color/bg_profile_field_outlined</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="TextInputLayout.Custom.Search" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="boxBackgroundColor">@color/background_base</item>
        <item name="boxStrokeColor">#00000000</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>

        <item name="boxCornerRadiusBottomEnd">28dp</item>
        <item name="boxCornerRadiusTopEnd">28dp</item>
        <item name="boxCornerRadiusBottomStart">28dp</item>
        <item name="boxCornerRadiusTopStart">28dp</item>
    </style>

    <style name="TextInputLayout.Custom.Search.Text" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/primary_yellow</item>
        <item name="colorOnSurface">@color/primary_black</item>
        <item name="colorError">@color/text_input_error</item>

        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>

        <!--Note: When setting a materialThemeOverlay on a custom TextInputLayout style, don’t forget to set editTextStyle to either a @style/Widget.MaterialComponents.TextInputEditText.* style or to a custom one that inherits from that.
        The TextInputLayout styles set materialThemeOverlay that overrides editTextStyle with the specific TextInputEditText style needed. Therefore, you don’t need to specify a style tag on the edit text.-->
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox</item>
    </style>

    <style name="TextInputLayout.Custom.SingleLine" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="hintTextColor">@color/secondary_text</item>
        <item name="boxStrokeColor">@color/bg_profile_field_outlined</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="TextInputLayout.Custom.DropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="materialThemeOverlay">@style/TextInputLayout.Custom.Base</item>
        <item name="boxStrokeColor">@color/til_box_stroke_color_primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

    <style name="TextInputLayout.Custom.Base" parent="">

        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnSurface">@color/primary_blue</item>
        <item name="colorError">@color/text_input_error</item>

        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>

        <!--Note: When setting a materialThemeOverlay on a custom TextInputLayout style, don’t forget to set editTextStyle to either a @style/Widget.MaterialComponents.TextInputEditText.* style or to a custom one that inherits from that.
        The TextInputLayout styles set materialThemeOverlay that overrides editTextStyle with the specific TextInputEditText style needed. Therefore, you don’t need to specify a style tag on the edit text.-->
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox</item>
    </style>
</resources>
